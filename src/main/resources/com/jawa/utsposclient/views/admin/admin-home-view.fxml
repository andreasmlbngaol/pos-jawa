<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="620.0" prefWidth="1100.0" style="-fx-background-color: #0A061E;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jawa.utsposclient.views.admin.AdminHomeController">
   <VBox alignment="TOP_CENTER" prefHeight="620.0" prefWidth="1100.0">
      <children>
         <HBox alignment="CENTER_RIGHT">
            <children>
               <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogout" prefHeight="40.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </children>
            <VBox.margin>
               <Insets bottom="64.0" />
            </VBox.margin>
         </HBox>
         <VBox alignment="CENTER">
            <children>
               <Label prefHeight="46.0" prefWidth="239.0" text="What's Your Role!" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font size="30.0" />
                  </font>
               </Label>
               <Label prefHeight="20.0" prefWidth="314.0" text="Please select your role for this project to continue!" textFill="WHITE">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </children>
            <VBox.margin>
               <Insets bottom="64.0" />
            </VBox.margin>
         </VBox>
         <HBox alignment="CENTER" spacing="64.0">
            <children>
               <VBox fx:id="userVBox" alignment="CENTER" onMouseClicked="#onSwitchToManageUser" spacing="16.0">
                  <children>
                     <ImageView fitHeight="99.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../images/people.png" />
                     </ImageView>
                     <Button mnemonicParsing="false" onAction="#onSwitchToManageUser" prefHeight="68.0" prefWidth="143.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" text="%manage_user_menu" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
               <VBox fx:id="productVBox" alignment="CENTER" onMouseClicked="#onSwitchToManageProduct" spacing="16.0">
                  <children>
                     <ImageView fitHeight="150.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../images/pick-list.png" />
                     </ImageView>
                     <Button mnemonicParsing="false" onAction="#onSwitchToManageProduct" prefHeight="68.0" prefWidth="143.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" text="%manage_product_menu" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
               <VBox fx:id="historyVBox" alignment="CENTER" onMouseClicked="#onSwitchToHistory" spacing="16.0">
                  <children>
                     <ImageView fitHeight="150.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../images/history.png" />
                        </image>
                     </ImageView>
                     <Button mnemonicParsing="false" onAction="#onSwitchToHistory" prefHeight="68.0" prefWidth="143.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" text="History" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
            </children>
         </HBox>
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </padding>
   </VBox>
</AnchorPane>
