         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" top="20.0" />
         </VBox.margin>
      </Button>
      <TextField fx:id="searchField" maxWidth="-Infinity" prefHeight="26.0" prefWidth="247.0" promptText="Search by Name or SKU">
