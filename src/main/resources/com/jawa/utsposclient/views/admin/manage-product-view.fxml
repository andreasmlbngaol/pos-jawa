            <Insets bottom="20.0" left="30.0" top="20.0" />
         </VBox.margin></TextField>
        <TableView fx:id="productTable" prefHeight="418.0" prefWidth="1014.0" style="-fx-background-color: #353147;">
            <columns>
                <TableColumn fx:id="productIdColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="id" />
                <TableColumn fx:id="skuColumn" prefWidth="151.1999969482422" style="-fx-alignment: CENTER;" text="sku" />
                <TableColumn fx:id="nameColumn" prefWidth="282.3999786376953" style="-fx-alignment: CENTER_LEFT;" text="name" />
                <TableColumn fx:id="priceColumn" prefWidth="143.5999755859375" style="-fx-alignment: CENTER_RIGHT;" text="price" />
                <TableColumn fx:id="typeColumn" prefWidth="180.0" style="-fx-alignment: CENTER;" text="type" />
                <TableColumn fx:id="actionColumn" prefWidth="202.800048828125" style="-fx-alignment: CENTER;" text="action" />
            </columns>
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
        </TableView>
        <HBox alignment="CENTER_RIGHT">
            <VBox.margin>
                <Insets left="30.0" top="30.0" />
            </VBox.margin>
            <Button fx:id="addProductButton" mnemonicParsing="false" onAction="#onShowAddProductDialog" prefHeight="40.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <HBox.margin>
                    <Insets bottom="20.0" right="30.0" />
                </HBox.margin>
          </Button>
        </HBox>
    </VBox>
</AnchorPane>
