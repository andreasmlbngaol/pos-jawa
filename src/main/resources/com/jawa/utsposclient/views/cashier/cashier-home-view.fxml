<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="620.0" prefWidth="1100.0" style="-fx-background-color: #0A061E;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jawa.utsposclient.views.cashier.CashierHomeController">
   <VBox alignment="TOP_CENTER" prefHeight="620.0" prefWidth="1100.0">
      <children>
         <HBox alignment="CENTER_RIGHT">
            <children>
                  <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogout" prefHeight="40.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" textFill="WHITE">
                        <font>
                              <Font name="System Bold" size="14.0" />
                        </font>
                  <effect>
                     <DropShadow height="32.7" radius="15.265" width="30.36">
                        <color>
                           <Color red="1.0" green="1.0" blue="1.0" />
                        </color>
                     </DropShadow>
                  </effect>
               </Button>
            </children>
            <VBox.margin>
               <Insets bottom="64.0" />
            </VBox.margin>
         </HBox>
         <VBox alignment="CENTER">
            <children>
                  <Label prefHeight="46.0" prefWidth="365.0" text="What would you like to do?" textAlignment="CENTER">
                        <font>
                              <Font size="30.0" />
                        </font>
                  <textFill>
                     <LinearGradient endX="0.09090909090909083" endY="1.0">
                        <stops>
                           <Stop>
                              <color>
                                 <Color />
                              </color>
                           </Stop>
                           <Stop offset="1.0">
                              <color>
                                 <Color red="1.0" green="1.0" blue="1.0" />
                              </color>
                           </Stop>
                        </stops>
                     </LinearGradient>
                  </textFill>
                  </Label>
               <Label prefHeight="20.0" prefWidth="418.0" text="Select one of the available options to proceed with the transaction!" textFill="WHITE">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
            </children>
            <VBox.margin>
               <Insets bottom="64.0" />
            </VBox.margin>
         </VBox>
         <HBox alignment="CENTER" spacing="64.0">
            <children>
               <VBox fx:id="refundVBox" alignment="BOTTOM_CENTER" onMouseClicked="#onSwitchToRefund" spacing="16.0">
                  <children>
                      <ImageView fitHeight="150.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                          <Image url="@../../images/refund (1).png" />
                      </ImageView>
                        <Button mnemonicParsing="false" onAction="#onSwitchToRefund" prefHeight="68.0" prefWidth="128.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" text="%refund_transaction_menu" textFill="WHITE">
                              <font>
                                    <Font name="System Bold" size="14.0" />
                              </font>
                     </Button>
                  </children>
               </VBox>
               <VBox fx:id="purchaseVBox" alignment="BOTTOM_CENTER" onMouseClicked="#onSwitchToPurchase" spacing="16.0">
                  <children>
                      <ImageView fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                          <Image url="@../../images/payment-method.png" />
                      </ImageView>
                        <Button mnemonicParsing="false" onAction="#onSwitchToPurchase" prefHeight="68.0" prefWidth="128.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" text="%purchase_transaction_menu" textFill="WHITE">
                              <font>
                                    <Font name="System Bold" size="14.0" />
                              </font>
                     </Button>
                  </children>
               </VBox>
               <VBox fx:id="historyVBox" alignment="BOTTOM_CENTER" onMouseClicked="#onSwitchToHistory" spacing="16.0">
                  <children>
                     <ImageView fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../images/history.png" />
                        </image>
                     </ImageView>
                     <Button mnemonicParsing="false" onAction="#onSwitchToHistory" prefHeight="68.0" prefWidth="128.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" text="History" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
            </children>
         </HBox>
      </children>
      <padding>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </padding>
   </VBox>
</AnchorPane>
