<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="620.0" prefWidth="1100.0" style="-fx-background-color: #0A061E;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jawa.utsposclient.views.SetPasswordController">
   <VBox alignment="CENTER" prefHeight="620.0" prefWidth="1100.0" spacing="16.0">
      <children>
         <Label text="NEW&#10;CREDENTIAL" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         <Label text="Your identity has been verified!&#10;Set your new password!" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
          <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
              <Image url="@../images/passicon.png" />
          </ImageView>
         <VBox alignment="CENTER" spacing="8.0">
            <children>
                 <Label text="%password_label" textFill="WHITE">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
                 <PasswordField fx:id="password" maxWidth="-Infinity" prefHeight="28.0" prefWidth="500.0" promptText="Password">
                  <effect>
                     <Lighting>
                        <bumpInput>
                           <Shadow />
                        </bumpInput>
                        <light>
                           <Light.Distant />
                        </light>
                     </Lighting>
                  </effect>
               </PasswordField>
            </children>
         </VBox>
         <VBox alignment="TOP_CENTER" spacing="8.0">
            <children>
                 <Label text="%confirm_password_label" textFill="WHITE">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
                 <PasswordField fx:id="confirmPassword" maxWidth="-Infinity" prefHeight="28.0" prefWidth="500.0" promptText="Confirm Password">
                  <effect>
                     <Lighting>
                        <bumpInput>
                           <Shadow />
                        </bumpInput>
                        <light>
                           <Light.Distant />
                        </light>
                     </Lighting>
                  </effect>
               </PasswordField>
            </children>
         </VBox>
           <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSetPassword" prefHeight="40.0" style="-fx-background-color: #e8b323; -fx-background-radius: 10;" textFill="WHITE">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
               <Insets top="16.0" />
            </VBox.margin>
         </Button>
      </children>
      <padding>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </padding>
   </VBox>
</AnchorPane>
